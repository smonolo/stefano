{
  "name": "stefano",
  "description": "Stefano",
  "version": "1.0.0",
  "main": "app.js",
  "author": "stevyb0t.it",
  "scripts": {
    "start": "electron .",
    "start-dev": "electron . --dev",
    "build-pack": "electron-builder --dir",
    "build-dist": "electron-builder && electron-builder install-app-deps",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "devDependencies": {
    "electron": "^7.1.9",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "discord-rich-presence": "0.0.8",
    "electron-log": "^4.0.3",
    "electron-store": "^5.1.0",
    "electron-updater": "^4.2.2",
    "open": "^7.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Stevyb0t/stefano.git"
  },
  "build": {
    "appId": "it.stevyb0t.stefano",
    "productName": "Stefano",
    "copyright": "Copyright Â© 2019 stevyb0t.it",
    "directories": {
      "output": "prod"
    },
    "win": {
      "icon": "images/icon.ico"
    },
    "nsis": {
      "installerIcon": "images/icon.ico",
      "uninstallerIcon": "images/icon.ico",
      "installerHeaderIcon": "images/icon.ico",
      "uninstallDisplayName": "Stefano",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Stefano",
      "oneClick": false,
      "perMachine": true
    },
    "artifactName": "StefanoSetup.exe",
    "compression": "store"
  }
}

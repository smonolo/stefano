{
  "name": "stefano",
  "description": "Stefano",
  "version": "1.1.0",
  "main": "app.js",
  "author": "stevyb0t.it",
  "scripts": {
    "start": "electron .",
    "start-dev": "electron . --dev",
    "build-pack": "electron-builder --dir",
    "build-dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0"
  },
  "build": {
    "appId": "it.stevyb0t.stefano",
    "productName": "Stefano",
    "copyright": "Copyright Â© 2019 stevyb0t.it",
    "directories": {
      "output": "production"
    },
    "win": {
      "icon": "_assets/images/icon.ico"
    },
    "nsis": {
      "installerIcon": "_assets/images/icon.ico",
      "uninstallerIcon": "_assets/images/icon.ico",
      "installerHeaderIcon": "_assets/images/icon.ico",
      "uninstallDisplayName": "Stefano",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Stefano",
      "oneClick": false,
      "perMachine": true
    },
    "artifactName": "StefanoSetup.exe",
    "compression": "store"
  }
}
